{
	"name": "svelte-dynamic-forms",
	"version": "0.0.2",
	"description": "A dynamic form library for Svelte 5 with validation, conditional field rendering, reactive dependencies, and template-based configuration",
	"license": "MIT",
	"author": "UNAFFI",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/UNAFFI/svelte-dynamic-forms.git"
	},
	"homepage": "https://svelte-dynamic-forms.unaffi.com/",
	"bugs": {
		"url": "https://github.com/UNAFFI/svelte-dynamic-forms/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@storybook/addon-docs": "^9.1.2",
		"@storybook/addon-svelte-csf": "^5.0.7",
		"@storybook/sveltekit": "^9.1.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^22",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^9.1.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"storybook": "^9.1.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"forms",
		"dynamic-forms",
		"validation",
		"reactive",
		"components",
		"ui",
		"frontend"
	],
	"dependencies": {
		"jsonata": "^2.1.0",
		"mustache": "^4.2.0"
	}
}
